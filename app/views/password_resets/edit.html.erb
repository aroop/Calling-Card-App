<!-- BEGIN main -->
<div id="main">
	<h2><%= @page_title = 'Change My Password' %></h2>

	<% form_for @user, :url => password_reset_path, :method => :put do |f| %>
	<%= f.error_messages %>

		<div class="first input">
			<p>Password</p>
			<%= f.password_field :password %>
		</div>
		<div class="input">
			<p>Password Confirmation</p>
			<%= f.password_field :password_confirmation %>
		</div>
		<div class="input">
			<input type="submit" value="Update my password and log me in" class="button"/>
			<input type="reset" value="Reset" class="button"/>
		</div>
	<% end %>
</div>
<!-- END main -->

