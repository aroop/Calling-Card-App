<!-- BEGIN main -->
<div id="main">
	<h2><%= @page_title = 'Login to your account' %></h2>

<p>	Please enter your login information. Your login information is the Account ID that we gave you when you signed up for one of our paid plans.</p>
	<% form_for @user_session do |f| %>
	<%= f.error_messages %>
		<div class="first input">
			<p>Login:</p>
			<%= f.text_field :login, :class=>"text", :size=>"48" %>
		</div>
		<div class="input">
			<p>Password:</p>
			<%= f.password_field :password, :class=>"text", :size=>"48" %>
		</div>
		<div class="input">
			<p>
			<%= check_box_tag 'remember_me' %>Remember my Account ID in the future
			</p>
		</div>
		<div class="input">
			<input type="submit" value="Login" class="button"/>
			<input type="reset" value="Reset" class="button"/>
		</div>
	<% end %>
  <%= link_to('Forgot your password?', forgot_password_url) %>
</div>
<!-- END main -->

