<!-- BEGIN main -->
<div id="main">
	<h2><%= @page_title = "Add new Speeddial number" %></h2>

	<p>Description of the the feature goes here</p>
	<% form_for([current_user, @speeddial_number]) do |f| %>
		<%= f.error_messages %>
		<div class="first input">
			<label>Entry:</label>
			<%= f.text_field :entry, :class=>"text", :size=>"48" %>
		</div>
		<div class="input">
			<label>Number:</label>
			<%= f.text_field :number, :class=>"text", :size=>"48" %>
		</div>
		<div class="input">
			<label>Description:</label>
			<%= f.text_field :description, :class=>"text", :size=>"48" %>
		</div>
		<div class="input buttons">
			<input type="submit" value="Add" class="button"/>
			<%= link_to "Cancel", user_speeddial_numbers_path(current_user) %>
		</div>
		<% end %>
</div>
<!-- END main -->

<%= render :partial => 'sidebar' %>