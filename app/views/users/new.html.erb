<!-- BEGIN main -->
<div id="main">
		<h2><%= @page_title = "India ISD '#{@plan.name}' Plan" %></h2>
		<h3>Monthly cost in (USD): $<%= @plan.amount -%></h3>

<p>Our plans automatically renew each month, but you may <strong>cancel</strong> at any time. </p>
	<% form_for(@user) do |f| %>
	<%= hidden_field_tag 'plan', @plan.id %>
		<%= f.error_messages %>
			<div class="first input">
				<label>Login:</label>
				<%= f.text_field :login, :class=>"text", :size=>"48" %>
			</div>
			<div class="input">
				<label>Email:</label>
				<%= f.text_field :email, :class=>"text", :size=>"48" %>
			</div>
			<div class="input">
				<label>Password:</label>
				<%= f.password_field :password, :class=>"text", :size=>"48" %>
			</div>
			<div class="input">
				<label>Confirm Password:</label>
				<%= f.password_field :password_confirmation, :class=>"text", :size=>"48" %>
			</div>
			<div class="input">
				<label>First Name:</label>
				<%= f.text_field :first_name, :class=>"text", :size=>"48" %>
			</div>
			<div class="input">
				<label>Last Name:</label>
				<%= f.text_field :last_name, :class=>"text", :size=>"48" %>
			</div>

			<% fields_for @creditcard do |cc| %>
			<div class="input">
				<label>Credit Card Type:</label>
				<%= cc.select :type, [["Visa", "visa"], ["MasterCard", "master"], ["Discover", "discover"], ["American Express", "american_express"]] %>
			</div>
			<div class="input">
				<label>Credit Card Number:</label>
				<%= cc.text_field :number, :class=>"text", :size=>"48" %>
			</div>
			<div class="input">
				<label>Expiration Date:</label>
				<%= cc.select :month, (1..12), :selected => Date.today.month %>
				<%= cc.select :year, (Date.today.year..Date.today.year+10) %>
			</div>
			<div class="input">
				<label>Card Verification Value (CVV):</label>
				<%= cc.text_field :verification_value, :class=>"text", :size=>"48" %>
			</div>
		  <% end %>
				
			<div class="buttons">
				<h4>By Signing up you are accepting Terms of Service.</h4>
				<p>Do not press the purchase button more than once.</p>
				<input type="submit" value="Purchase" class="button"/>
			</div>
			<% end %>
</div>
<!-- END main -->

<!-- BEGIN sidebar -->
<div id="sidebar">
	<div class="buffer">
		<h4><%= @plan.minutes -%> Minutes/Month</h4>
		<h4><%= @plan.phones -%> Pinless Dialing Numbers</h4>
		<h4>Unlimited Speed dial numbers</h4>
		<h4>30 Day Money Back</h4>
		<h4>1 Minute Rounding</h4>
		<h4>Superior voice quality</h4>
		<h4>No Connection/Hidden Fees</h4>
		<h4>Instant Activation</h4>
		<h4>Last number redial</h4>
	</div>
</div>
<!-- END sidebar -->			
