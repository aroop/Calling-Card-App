<p>This is a recurring charge that will be billed each month.</p>
	<% form_for(@user) do |f| %>
		<%= f.error_messages %>
			<div class="first input">
				<label>Login:</label>
				<%= f.text_field :login, :class=>"text", :size=>"48" %>
			</div>
			<div class="input">
				<label>First Name:</label>
				<%= f.text_field :first_name, :class=>"text", :size=>"48" %>
			</div>
			<div class="input">
				<label>Last Name:</label>
				<%= f.text_field :last_name, :class=>"text", :size=>"48" %>
			</div>
			<div class="input">
				<label>Email:</label>
				<%= f.text_field :email, :class=>"text", :size=>"48" %>
			</div>
			<div class="input">
				<label>Password:</label>
				<%= f.password_field :password, :class=>"text", :size=>"48" %>
			</div>
			<div class="input">
				<label>Confirm Password:</label>
				<%= f.password_field :password_confirmation, :class=>"text", :size=>"48" %>
			</div>
			<div class="input">
				<label>Phone Number:</label>
				<%= f.text_field :phone_number, :class=>"text", :size=>"48" %>
			</div>
			<div class="input buttons">
				<h4>By Signing up you are accepting Terms of Service.</h4>
				<p>Do not press the purchase button more than once.</p>
			</div>			
